{
  "name": "@hummingbot/gateway-code",
  "version": "0.1.0",
  "description": "Next-generation command center for Hummingbot Gateway using LLMs and MCP",
  "main": "dist/client/client.js",
  "bin": {
    "gateway-code": "dist/client/client.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/client/client.js",
    "start:server": "node dist/server/server.js",
    "dev": "ts-node-dev --respawn client/client.ts",
    "dev:server": "ts-node-dev --respawn server/server.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "postinstall": "pnpm build"
  },
  "keywords": [
    "hummingbot",
    "gateway",
    "llm",
    "mcp",
    "ai",
    "crypto",
    "defi"
  ],
  "author": "Hummingbot Foundation",
  "license": "Apache-2.0",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.12.0",
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "ink": "^4.4.1",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^5.0.1",
    "keytar": "^7.9.0",
    "minimist": "^1.2.8",
    "openai": "^4.20.1",
    "ora": "^5.4.1",
    "react": "^18.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.42",
    "@types/minimist": "^1.2.5",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}