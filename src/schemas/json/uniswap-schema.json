{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "allowedSlippage": { "type": "string" },
    "networks": {
      "type": "object",
      "patternProperties": {
        "^\\w+$": {
          "type": "object",
          "properties": {
            "maximumHops": { "type": "integer" },
            "useRouter": { "type": "boolean" },
            "amm": {
              "type": "object",
              "patternProperties": {
                "^[A-Z]+-[A-Z]+$": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            },
            "clmm": {
              "type": "object", 
              "patternProperties": {
                "^[A-Z]+-[A-Z]+$": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          },
          "required": ["maximumHops", "useRouter", "amm", "clmm"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": ["allowedSlippage", "networks"]
}