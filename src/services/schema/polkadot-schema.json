{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "networks": {
            "type": "object",
            "patternProperties": {
                "^\\w+$": {
                    "type": "object",
                    "properties": {
                        "parachain": {
                            "type": "string",
                            "description": "The active parachain to use for this network"
                        }
                    },
                    "required": [
                        "parachain"
                    ],
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        },
        "defaultTransactionTimeout": {
            "type": "integer",
            "description": "Default timeout for transactions in milliseconds"
        },
        "batchTxLimit": {
            "type": "integer",
            "description": "Maximum number of transactions allowed in a batch"
        }
    },
    "additionalProperties": false,
    "required": [
        "networks"
    ]
}
