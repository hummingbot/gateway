{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "networks": {
      "type": "object",
      "patternProperties": {
        "^\\w+$": {
          "type": "object",
          "properties": {
            "chainId": {
              "type": "string"
            },
            "nodeURL": {
              "type": "string"
            },
            "assetListType": {
              "type": "string"
            },
            "assetListSource": {
              "type": "string"
            }
          },
          "required": [
            "chainId",
            "nodeURL",
            "assetListType",
            "assetListSource"
          ],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "nativeCurrencySymbol": {
      "type": "string"
    },
    "defaultMaxNumberOfRetries": {
      "type": "integer"
    },
    "defaultDelayBetweenRetries": {
      "type": "integer"
    },
    "defaultTimeout": {
      "type": "integer"
    },
    "defaultBatchSize": {
      "type": "integer"
    },
    "defaultDelayBetweenBatches": {
      "type": "integer"
    }
  },
  "additionalProperties": false,
  "required": [
    "nativeCurrencySymbol",
    "defaultMaxNumberOfRetries",
    "defaultDelayBetweenRetries",
    "defaultTimeout",
    "defaultBatchSize",
    "defaultDelayBetweenBatches"
  ]
}
