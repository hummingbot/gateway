{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "certificatePath": { "type": "string" },
    "logPath": { "type": "string" },
    "port": { "type": "integer" },
    "docsPort": { "type": "integer" },
    "ipWhitelist": { "type": "array" },
    "allowedOrigins": {
      "type": "array",
      "items": { "type": "string" },
      "description": "CORS allowed origins for API requests (e.g., from browser-based clients)",
      "default": []
    },
    "GMTOffset": { "type": "number" },
    "logToStdOut": { "type": "boolean" },
    "fastifyLogs": { "type": "boolean" },
    "logLevel": {
      "type": "string",
      "enum": ["debug", "info", "warn", "error"],
      "default": "info"
    },
    "coingeckoAPIKey": {
      "type": ["string", "null"],
      "description": "CoinGecko API key for GeckoTerminal integration (optional)"
    },
    "useCerts": {
      "type": "boolean",
      "description": "Use client certificates for authentication (mutual TLS)",
      "default": false
    },
    "apiKeys": {
      "type": "array",
      "items": { "type": "string" },
      "description": "API keys for authenticating requests to Gateway (optional, for production deployments)",
      "default": []
    }
  },
  "additionalProperties": false,
  "required": ["port", "certificatePath", "logPath"]
}
