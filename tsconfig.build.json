{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "incremental": true,
    "composite": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSourceMap": false
  },
  "include": ["src/**/*.ts", "packages/**/*.ts"],
  "exclude": ["node_modules", "dist", "coverage", "test", "test-scripts"]
}
